<div class="edit">
<h3>Editing Book</h3>
<%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
        <div class="errors">
            <h4 class="errors_count"><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </div>
    <% end %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %><br>
    <%= f.submit "Update Book" %>
<% end %>
<%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>
</div>