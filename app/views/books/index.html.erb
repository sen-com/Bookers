<div class="main">
    <h1>Books</h1>
    <table>
        <tr>
            <th class="title">Title</th>
            <th class="body">Body</th>
            <th class="link"></th>
            <th class="link"></th>
            <th class="link"></th>
        </tr>
        <% @books.each do |book| %>
        <tr>
            <td class="title"><%= book.title %></td>
            <td class="body"><%= book.body %></td>
            <td class="link"><%= link_to "show ", book_path(book) %></td>
            <td class="link"><%= link_to "edit ", edit_book_path(book) %></td>
            <td class="link"><%= link_to "destroy", book_path(book), method: :delete,  "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
        <% end %>

    </table>


    <div class="main-new">
        <h3>New book</h3>
        <%= form_for(@book) do |f| %>
            <% if @book.errors.any? %>
            <div class="errors">
                <h4 class="errors_count"><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
                <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </div>
            <% end %>
            <p>Title</p>
            <%= f.text_field :title %>
            <p>Body</p>
            <%= f.text_area :body %><br>
            <%= f.submit "Create Book" %>
        <% end %>
    </div>
</div>


